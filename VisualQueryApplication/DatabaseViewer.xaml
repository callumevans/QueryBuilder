<Window x:Class="VisualQueryApplication.DatabaseViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualQueryApplication"
        xmlns:vm="clr-namespace:VisualQueryApplication.ViewModels"    
        mc:Ignorable="d"
        Title="DatabaseViewer" Height="317" Width="769">
    
    <Window.DataContext>
        <vm:DatabaseViewerViewModel />
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <DataGrid ItemsSource="{Binding DisplayedData}" Grid.Column="1" x:Name="dataGrid" Padding="0" Margin="0" MinColumnWidth="50" />
        <ListBox x:Name="DatabaseTablesList" ItemsSource="{Binding LoadedTables}" Margin="0" SelectionChanged="Selector_OnSelectionChanged" />
    </Grid>
</Window>
