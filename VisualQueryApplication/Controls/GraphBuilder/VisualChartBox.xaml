<UserControl x:Class="VisualQueryApplication.Controls.GraphBuilder.VisualChartBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisualQueryApplication.Controls.GraphBuilder"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid MinWidth="200" MinHeight="100">
        <Border Background="LightGray" BorderThickness="1" BorderBrush="Black">
            <Border Background="Gray" Height="30" VerticalAlignment="Top">
                <TextBlock x:Name="nodeHeading" TextWrapping="Wrap" Text="NODE" VerticalAlignment="Center" TextAlignment="Center" FontSize="20" />
            </Border>
        </Border>
    </Grid>
</UserControl>
